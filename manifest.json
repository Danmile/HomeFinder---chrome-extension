{
  "manifest_version": 3,
  "name": "HomeFinder Extension",
  "version": "1.0",
  "description": "Get real time alerts of apartment new posts",
  "permissions": ["storage", "notifications", "tabs", "activeTab", "alarms"],
  "host_permissions": ["https://gw.yad2.co.il/*", "http://localhost:4000/*"],
  "action": {
    "default_popup": "popup.html"
  },
  "content_scripts": [
    {
      "matches": ["https://www.yad2.co.il/*"],
      "js": ["content.js"]
    }
  ],
  "background": {
    "service_worker": "background.js"
  },
  "icons": {
    "128": "./assets/icon.png"
  }
}
